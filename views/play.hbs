<!DOCTYPE html>
<html>
  <head>
    <style type="text/css">
      html, body, #map-canvas { height: 100%; margin: 0; padding: 0;}
    </style>
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script>
      var levelData = {{{levelJSON}}};
    </script>
	<script src="/js/util.js"></script>
    <script src="/js/play.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>
    <script type="text/javascript">
    var googleMap = null;

      function initialize() {
        var mapOptions = {
          center: { lat: levelData.start.lat, lng: levelData.start.lng },
          zoom: 20,
          keyboardShortcuts: false,
          disableDefaultUI: true,
          navigationControl: false,
          mapTypeControl: false,
          scrollwheel: false,
          tilt: 0,
          scaleControl: false,
          draggable: false,
          mapTypeId : google.maps.MapTypeId.SATELLITE
        };
        googleMap = new google.maps.Map(document.getElementById('map-canvas'),
            mapOptions);

        google.maps.event.addDomListener(googleMap, 'click', googleMapClickEvent);
      }

      function googleMapClickEvent(event) {
        var lat = event.latLng.lat();
        var lng = event.latLng.lng();

        if (typeof mapClicked == 'function') {
          mapClicked(lat, lng);
        }
      }

      google.maps.event.addDomListener(window, 'load', initialize);
    </script>
  </head>
  <body>
  <img src="/images/car.png" id="carImage" style="position: absolute; top: 300px; left: 300px; z-index: 10000;
    transform: rotate(285deg);
    " />
	<img src="/images/arrow.png" id="arrow" style="position: absolute; top: 200px; left: 100px; z-index: 10000;" />
	<div id="distanceLeft" style="position: absolute; top: 280px; left: 100px; z-index: 10001; font-size: 24px; color: white; text-shadow: 3px 3px 2px rgba(150, 150, 150, 1);"></div>
	<div id="map-canvas"></div>

  <div id="winScreen" style="font-size: 90px; color: white; position: absolute; top: 100px; left: 200px; z-index: 11000; visibility: hidden;">You made it!</div>
  </body>
</html>